                        </div>
                    </fieldset>
                    </section>
                    <div>
                        <button class="btn btn-primary" type="submit">@localizer["Review"]</button>
                        <span>
                            <a class="btn btn-default" asp-page="./Select">@localizer["Back"]</a>
                        </span>
                    </div>

            </details>
        </form>
    </div>
</section>
