@page
@using Microsoft.AspNetCore.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@inject IStringLocalizer<SelectModel> localizer
@inject IHtmlLocalizer<SelectModel> htmlLocalizer
@model SelectModel
@{
    Layout = null;
    ViewData["Title"] = "Home page";
    if (HttpContext.Request.Query["culture"] == "fr")
    {
        CultureInfo.CurrentCulture = new CultureInfo("fr");
        CultureInfo.CurrentUICulture = new CultureInfo("fr");
        Response.Cookies.Append(
            CookieRequestCultureProvider.DefaultCookieName,
            CookieRequestCultureProvider.MakeCookieValue(new RequestCulture(CultureInfo.CurrentCulture)),
            new CookieOptions { Expires = DateTimeOffset.UtcNow.AddYears(1) }
        );
    }
    else if (HttpContext.Request.Query["culture"] == "en")
    {
        CultureInfo.CurrentCulture = new CultureInfo("en");
        CultureInfo.CurrentUICulture = new CultureInfo("en");
        Response.Cookies.Append(
            CookieRequestCultureProvider.DefaultCookieName,
            CookieRequestCultureProvider.MakeCookieValue(new RequestCulture(CultureInfo.CurrentCulture)),
            new CookieOptions { Expires = DateTimeOffset.UtcNow.AddYears(1) }
        );
    }

    var requestCultureFeature = HttpContext.Features.Get<IRequestCultureFeature>();
    var requestCulture = requestCultureFeature.RequestCulture;
    ViewData["Select"] = localizer["Select"];
    ViewData["Home"] = localizer["Home"];
}

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>CAAS</title>

    <!-- Bootstrap CSS -->
    <link href="~/lib/bootstrap-5.3.8-dist/css/bootstrap.css" rel="stylesheet">

    <!-- External CSS -->
    <link rel="stylesheet" href="~/css/dashboard02.css">

    <!-- project css -->
    <link rel="stylesheet" href="~/css/site.css">
</head>
<body class="bg-page">

    <!-- HEADER -->
    <header class="py-3 px-4 d-flex justify-content-between align-items-center">
        <h4 class="text-white m-0"><a href="/Index" class="custom-link">CAAS</a></h4>

        <a href="/Index" class="btn btn-danger ms-auto">@localizer["SignOut"]</a>
    </header>

    <!-- MAIN DASHBOARD AREA -->
    <main class="dashboard-container">
        <div >
            <div class="text-center">
                <br />
                <br />
                <br />
                <br />
                <br />
                <br />
                <div class="text-center"><h3>@htmlLocalizer["Heading"]</h3></div>
                <br />
                <form method="post" id="selectForm">
                    <div class="text-center georgia-font">
                        <div class="georgia-font">
                            @htmlLocalizer["Text1"]
                        </div>
                        <br />
                        <div>
                            @htmlLocalizer["Text2"]
                        </div>
                        <br />
                        <div>
                            @htmlLocalizer["Text3"]
                        </div>
                        <br />
                        <div>
                            @htmlLocalizer["Text4"]
                        </div>
                        <br />
                    </div>
                    <div class="row">
                    <div class="form-group col-sm-3"></div>
                    <div class="form-group col-sm-6">
                        <label for="emailAddress">
                            <span class="field-name">Email Address</span>
                        </label>
                        <input class="form-control" id="emailAddress" name="emailAddress" type="text" asp-for="@Model.emailAddress" autocomplete="emailAddress" data-rule-minlength="1" style="width:100%" required="required"
                               data-num="" data-msg="Please enter Email Address" value="abc@gmail.com">
                    </div>
                    <div class="form-group col-sm-3"></div>
