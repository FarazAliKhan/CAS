@using Microsoft.AspNetCore.Components
@using WebRazor.Models
@using Microsoft.AspNetCore.Http.Extensions;
<!DOCTYPE html>
<html class="no-js" lang="en" dir="ltr">
<head>
    <meta charset="utf-8">
    <title>
        CAS
    </title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="alternate" hreflang="fr" href="index-fr.html">
    <link rel="stylesheet" href="~/lib/fontawesome-7.0.1/css/all.css">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- External CSS -->
    @* <link rel="stylesheet" href="~/css/dashboard02.css"> *@
    <link rel="stylesheet" href="~/css/site.css">
    <link href="~/lib/jspanel-4.16.1/dist/jspanel.css" rel="stylesheet">
</head>
<body class="bg-page" vocab="http://schema.org/" resource="#wb-webpage" typeof="WebPage" onload="focusOnForm('@TempData["sectionId"]');">
    @{
        var CurrentPageEn = "";
        var CurrentPageFr = "";
        var url = this.Context.Request.GetDisplayUrl();
        if (this.Context.Request.Query.Count < 2)
        {
            url = this.Context.Request.GetDisplayUrl().Replace("?culture=en", "").Replace("?culture=fr", "");
            CurrentPageEn = url + "?culture=en";
            CurrentPageFr = url + "?culture=fr";
        }
        else if (this.Context.Request.Query.Count > 1)
        {
            url = this.Context.Request.GetDisplayUrl().Replace("&culture=en", "").Replace("&culture=fr", "");
            CurrentPageEn = url + "&culture=en";
            CurrentPageFr = url + "&culture=fr";
        }
    }

    <!-- HEADER -->
    <header class="py-3 px-4 d-flex justify-content-between align-items-center">
        <h4 class="text-white m-0">CAAS</h4>

        <a href="/Index" class="btn btn-outline-light">Sign Out</a>
    </header>

    <!-- MAIN DASHBOARD AREA -->
    <main class="dashboard-container">
        <div class="container">
            <div class="text-center p-5 bg-white">
                
                <p class="text-muted">@RenderBody()</p>
            </div>
        </div>
    </main>
   
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/fontawesome-7.0.1/js/all.js"></script>
    <script src="~/js/site.js"></script>
    <!-- loading jsPanel javascript -->
    <script src="~/lib/jspanel-4.16.1/dist/jspanel.js"></script>
    <!-- optionally load jsPanel extensions -->
    <script src="~/lib/jspanel-4.16.1/dist/extensions/contextmenu/jspanel.contextmenu.js"></script>
    <script src="~/lib/jspanel-4.16.1/dist/extensions/hint/jspanel.hint.js"></script>
    <script src="~/lib/jspanel-4.16.1/dist/extensions/modal/jspanel.modal.js"></script>
    <script src="~/lib/jspanel-4.16.1/dist/extensions/tooltip/jspanel.tooltip.js"></script>
    <script src="~/lib/jspanel-4.16.1/dist/extensions/dock/jspanel.dock.js"></script>
</body>
</html>
